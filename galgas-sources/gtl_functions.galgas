#-----------------------------------------------------------------------------*
# For compatibility purpose with previous version : returns "true" or "false"
# string according to the bool argument.
#-----------------------------------------------------------------------------*
func trueFalse ?let @bool inBool ->@string result
{
  if inBool then
    result = "true"
  else
    result = "false"
  end
}

